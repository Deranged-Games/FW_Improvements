	<!-- Lootable Ammo Cartons -->
	<append xpath="/blocks/block[@name='palletCartonMilitaryBase']">	
		<property name="Class" value="Loot"/>
		<property name='LootList' value = 'ammoCarton'/>
	</append>
</configs>