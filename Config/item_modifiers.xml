<configs>
  <!-- Armor Mod Buffs -->
  <set xpath="/item_modifiers/item_modifier[@name='modArmorPlatingBasic']/effect_group/passive_effect[@name='PhysicalDamageResist']/@value">2</set>
  <set xpath="/item_modifiers/item_modifier[@name='modArmorPlatingReinforced']/effect_group/passive_effect[@name='PhysicalDamageResist']/@value">4</set>

  <!-- Muzzle Breaks for shoguns -->
  <set xpath="/item_modifiers/item_modifier[@name='modGunMuzzleBrake']/@blocked_tags">noMods</set>

  <!-- Remove kick for long barrel -->
  <remove xpath="/item_modifiers/item_modifier[@name='modGunBarrelExtender']/effect_group/passive_effect[starts-with (@name,'KickDegrees')]"/>

  <!-- Bipod spread dampening was garbage -->
  <set xpath="/item_modifiers/item_modifier[@name='modGunBipod']/effect_group/passive_effect[@name='SpreadMultiplierAiming']/@value">-.4</set>

  <!-- Weighted Head Buff -->
  <remove xpath="/item_modifiers/item_modifier[@name='modMeleeWeightedHead']/effect_group/requirement" />
  <append xpath="/item_modifiers/item_modifier[@name='modMeleeWeightedHead']/effect_group">
    <passive_effect name="EntityDamage" operation="perc_add" value=".35"/>
    <passive_effect name="BlockDamage" operation="perc_add" value=".35"/>
    <passive_effect name="AttacksPerMinute" operation="perc_add" value="-.15"/>
    <passive_effect name="StaminaLoss" operation="perc_add" value=".25"/>
  </append>
</configs>