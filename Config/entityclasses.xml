<configs>
  <!-- Loot and player bag remain for longer -->
  <set xpath="/entity_classes/entity_class[@name='EntityLootContainerRegular']/property[@name='TimeStayAfterDeath']/@value">1800</set>
  <set xpath="/entity_classes/entity_class[@name='EntityLootContainerStrong']/property[@name='TimeStayAfterDeath']/@value">1800</set>
  <set xpath="/entity_classes/entity_class[@name='EntityLootContainerBoss']/property[@name='TimeStayAfterDeath']/@value">1800</set>
  <set xpath="/entity_classes/entity_class[@name='EntityLootContainerBandit']/property[@name='TimeStayAfterDeath']/@value">1800</set>

  <!-- Zombie Sight Distance Increase -->
  <set xpath="/entity_classes/entity_class[starts-with(@name, 'zombie')]/property[@name='SightRange']/@value">60</set>
  <set xpath="/entity_classes/entity_class[@name='zombieTemplateMale']/property[@name='AITarget-4']/@data">class=EntityPlayer,60,30,EntityNPC,0,0</set>

  <!-- Animal Sight Distance Increase -->
  <set xpath="/entity_classes/entity_class[starts-with(@name, 'animal')]/property[@name='SightRange']/@value">100</set>
  <set xpath="/entity_classes/entity_class[@name='animalTemplateHostile']/property[@name='AITarget-4']/@data">class=EntityPlayer,100,50,EntityNPC,0,0</set>

  <!-- Alter specific animal target tasks -->
  <set xpath="/entity_classes/entity_class[@name='animalBear']/property[@name='AITarget-3']/@data">class=EntityPlayer,100,50,EntityAnimalStag,0,0,EntityZombie,100,50</set>
  <set xpath="/entity_classes/entity_class[@name='animalZombieBear']/property[@name='AITarget-3']/@data">class=EntityPlayer,100,50,EntityAnimalStag,0,0</set>
  <set xpath="/entity_classes/entity_class[@name='animalWolf']/property[@name='AITarget-3']/@data">class=EntityPlayer,100,50,EntityAnimalStag,0,0,EntityZombie,100,50</set>
  <set xpath="/entity_classes/entity_class[@name='animalCoyote']/property[@name='AITarget-3']/@data">class=EntityPlayer,100,50,EntityAnimalRabbit,0,0,EntityZombie,100,50</set>
  <set xpath="/entity_classes/entity_class[@name='animalDireWolf']/property[@name='AITarget-3']/@data">class=EntityPlayer,100,50,EntityAnimalStag,0,0,EntityZombie,100,50</set>
  <set xpath="/entity_classes/entity_class[@name='animalMountainLion']/property[@name='AITarget-3']/@data">class=EntityPlayer,100,50,EntityAnimalStag,0,0,EntityZombie,100,50</set>
  <set xpath="/entity_classes/entity_class[@name='animalZombieDog']/property[@name='AITarget-4']/@data">class=EntityPlayer,100,50,EntityNPC,0,0</set>
  <set xpath="/entity_classes/entity_class[@name='animalSnake']/property[@name='AITarget-4']/@data">class=EntityPlayer,100,50,EntityNPC,0,0</set>
  <set xpath="/entity_classes/entity_class[@name='animalBossGrace']/property[@name='AITarget-4']/@data">class=EntityPlayer,100,50,EntityZombie,100,50</set>

  <!-- Remove Wolf/Coyote cries -->
	<set xpath="/entity_classes/entity_class[@name='animalWolf']/property[@name='SoundDeath']/@value">wolfattack</set>
	<set xpath="/entity_classes/entity_class[@name='animalCoyote']/property[@name='SoundDeath']/@value">wolfattack</set>
</configs>