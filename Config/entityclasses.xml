<configs>
  <!-- Loot and player bag remain for longer -->
  <set xpath="/entity_classes/entity_class[@name='EntityLootContainerRegular']/property[@name='TimeStayAfterDeath']/@value">2400</set>
  <set xpath="/entity_classes/entity_class[@name='EntityLootContainerStrong']/property[@name='TimeStayAfterDeath']/@value">2400</set>
  <set xpath="/entity_classes/entity_class[@name='EntityLootContainerBoss']/property[@name='TimeStayAfterDeath']/@value">2400</set>
  <set xpath="/entity_classes/entity_class[@name='DroppedLootContainerTwitch']/property[@name='TimeStayAfterDeath']/@value">2400</set>

  <!-- Remove Wolf/Coyote cries -->
	<set xpath="/entity_classes/entity_class[@name='animalWolf']/property[@name='SoundDeath']/@value">wolfattack</set>
	<set xpath="/entity_classes/entity_class[@name='animalCoyote']/property[@name='SoundDeath']/@value">wolfattack</set>
</configs>