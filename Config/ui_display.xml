<configs>
  <!-- Adding Steel Ammo to ui_display so stats display correctly -->
  <append xpath="/ui_display_info/item_display">
    <item_display_info display_type="ammoBulletSteel" display_group="groupAmmo">
      <display_entry name="EntityDamage" title_key="statEntityDamageRanged"/>
      <display_entry name="BlockDamage" title_key="statBlockDamage"/>
      <display_entry name="DegradationPerUse" title_key="statDegradationPerUse" display_type="Percent" negative_preferred="true"/>
    </item_display_info>
  </append>

  <append xpath="/ui_display_info/crafting_category_display/crafting_category_list[@display_type='chemistryStation']">
    <crafting_category name="Resources" icon="ui_game_symbol_resource" display_name="lblCategoryResources" />
  </append>

  <append xpath="/ui_display_info/crafting_category_display">
    <crafting_category_list display_type="HydroponicVerticalFarm">
      <crafting_category name="HVF_All" icon="ui_game_symbol_book" display_name="XUI_CraftingList_HVF_All" />
      <crafting_category name="HVF_Food" icon="ui_game_symbol_fork" display_name="XUI_CraftingList_HVF_Food" />
      <crafting_category name="HVF_Drink" icon="ui_game_symbol_thirst" display_name="XUI_CraftingList_HVF_Drink" />
      <crafting_category name="HVF_Med" icon="ui_game_symbol_medical" display_name="XUI_CraftingList_HVF_Med" />
      <crafting_category name="HVF_Res" icon="ui_game_symbol_resource" display_name="XUI_CraftingList_HVF_Res" />
    </crafting_category_list>
    <crafting_category_list display_type="cntStoveWorking">
      <crafting_category name="CFFood/Cooking" icon="ui_game_symbol_fork" display_name="lblCategoryFood" />
      <crafting_category name="CFDrink/Cooking" icon="ui_game_symbol_thirst" display_name="lblCategoryDrink" />
      <crafting_category name="CFChemicals" icon="ui_game_symbol_chemistry" display_name="lblCategoryChemicals" />
    </crafting_category_list>
    <crafting_category_list display_type="cntWallOvenWorking">
      <crafting_category name="CFFood/Cooking" icon="ui_game_symbol_fork" display_name="lblCategoryFood" />
    </crafting_category_list>
    <crafting_category_list display_type="cntGasRangeWorking">
      <crafting_category name="CFFood/Cooking" icon="ui_game_symbol_fork" display_name="lblCategoryFood" />
      <crafting_category name="CFDrink/Cooking" icon="ui_game_symbol_thirst" display_name="lblCategoryDrink" />
    </crafting_category_list>
    <crafting_category_list display_type="cntMicrowaveWorking">
      <crafting_category name="CFFood/Cooking" icon="ui_game_symbol_fork" display_name="lblCategoryFood" />
      <crafting_category name="CFChemicals" icon="ui_game_symbol_chemistry" display_name="lblCategoryChemicals" />
    </crafting_category_list>
    <crafting_category_list display_type="cntCoffeeMakerWorking">
      <crafting_category name="CFDrink/Cooking" icon="ui_game_symbol_thirst" display_name="lblCategoryDrink" />
    </crafting_category_list>
  </append>
</configs>