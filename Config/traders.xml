<configs>
	<set xpath="/traders/trader_info[@id='1' and @reset_interval='3']/@reset_interval">1</set>

	<insertAfter xpath="/traders/trader_item_groups/trader_item_group[@name='modAllT3']">
		<trader_item_group name="stashStationSet">
			<item name="forge" prob="0.6" count="1,2"/>
			<item name="workbench" prob="0.4"/>
			<item name="cementMixer" prob="0.5"/>
			<item name="meleeToolAuger" prob="0.3"/>
			<item name="gunToolNailgun" prob="0.9" count="1,2"/>
		</trader_item_group>
		<trader_item_group name="stashToolSet">
			<item name="toolBeaker" count="1,3"/>
			<item name="toolForgeCrucible" prob="0.3"/>
			<item name="toolAndDieSet" prob="0.6" count="1,2"/>
		</trader_item_group>
	</insertAfter>

	<append xpath="/traders/trader_item_groups/trader_item_group[@name='modAllT1SecretStash']">
		<item group="stashStationSet" prob="0.5"/>
		<item group="stashToolSet" prob="0.5"/>
	</append>
	<append xpath="/traders/trader_item_groups/trader_item_group[@name='modAllT2SecretStash']">
		<item group="stashStationSet" prob="0.8"/>
		<item group="stashToolSet" prob="0.8"/>
	</append>
	<append xpath="/traders/trader_item_groups/trader_item_group[@name='modAllT3SecretStash']">
		<item group="stashStationSet" prob="0.5"/>
		<item group="stashToolSet" prob="0.5"/>
	</append>
	<append xpath="/traders/trader_item_groups/trader_item_group[@name='modAllT4SecretStash']">
		<item group="stashStationSet" prob="0.3"/>
		<item group="stashToolSet" prob="0.3"/>
	</append>
	<append xpath="/traders/trader_item_groups/trader_item_group[@name='modAllT5SecretStash']">
		<item group="stashStationSet" prob="0.1"/>
		<item group="stashToolSet" prob="0.1"/>
	</append>
</configs>